ENV THRUK_LIB_VERSION=3.00-0
ENV THRUK_USER=thruk

USER root
#RUN rm /etc/rhsm-host
RUN dnf -y install wget perl git automake make gcc glibc rsync gd-devel mariadb-connector-c-devel patch mod_fcgid httpd net-tools

# Workaround until chrpath is available in UBI baseOS repos
